extends main
block content
	br
	div(class = "container")
		div(class="row" style="padding:0px;margin-bottom:0")
			ul(class="tabs")
				li(class="tab col s3 offset-s3 tabActive", id="profileTab", style="border-radius:10px 0 0 0;")
					a(href="#Profile") 
						h5 Profile
				li(class="tab col s3 tabInactive" id ="historyTab", style="border-radius:0px 10px 0 0; color:white")
					a(href="#History") 
						h5 History
		div(id="Profile", class="col s12")
				div(class ="col s12" style="background-color:#f15f22; border-radius:10px 10px 0px 0px; color:white")
					h3(style="padding:0px 0px 0px 10px;margin:0") Your Profile, #{user.username}
				div(class = "row")
					div(class = "col l3 center-align")
						span(class ="colorHeader")
							h5 #{user.username}
						if user
							img(src=`${user.image}`, width ="100", height="100")
						else
							img(src ="https://static.licdn-ei.com/scds/common/u/images/themes/katy/ghosts/person/ghost_person_200x200_v1.png", width ="100", height="100")
						h5 Joined: #{user.createdAt}
					div(class ="col l1")
						strong
							h5 Name:
							h5 Email:
							h5 Bio:
					div(class ="col l7 offset-l1")
						h5 #{user.firstName} #{user.lastName}
						h5 #{user.email}
							p #{user.about}


							if user.stripeAccountId
								form(method='post' action='/dashboard stripe-dash')
									button.btn.blueBtn(type='submit') View Stripe Dashboard
							else
								form(method='get' action='/authorize')
									button.btn.blueBtn(type='submit') Connect with Stripe
									
					div(class ="col l12 blueBox", style ="height:50px;")
									
									br
		div(id="History", class="col l12")
			div(class ="col s12" style="background-color:#f15f22; border-radius:10px 10px 0px 0px; color:white")
						h3(style="padding:0px 0px 0px 10px;margin:0") Your History, (username)
			div(class = "row")
				div(class = "col l3 center-align")
					ul
						li 
							h5 user comment
					ul
						li 
							h5 user comment
					ul
						li 
							h5 user comment
			div(class ="col l12 blueBox", style ="height:50px;")
			
			




