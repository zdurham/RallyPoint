extends main
block content
	div(class = "container")
		div(class="row")
			div(class ="col s12 teal")
				h3 Your Profile #{user.username}
		div(class = "row")
			div(class = "col l3")
				span(class ="colorHeader")
					h4 #{user.username}
				img(src ="https://static.licdn-ei.com/scds/common/u/images/themes/katy/ghosts/person/ghost_person_200x200_v1.png", width ="100", height="100")
				h4 Last Update:
				h4 Joined: #{user.createdAt}
			div(class ="col l1")
				strong
					h4 Name: 
					h4 Email: 
					h4 Bio: 
			div(class ="col l7 offset-l1")
					h4 #{user.firstName} #{user.lastName}
					h4 #{user.email}
					p #{user.about}
	div(class = "container commentListProfile")
		div(class ="row")
			div(class ="col l12 blueBox text-white center-align")
				h3 Comments / Posts
				ul
					li userComment
					li userComment
					li userComment
					li userComment

		form(method='get' action='/authorize')
			button.btn(type='submit') Connect with Stripe
