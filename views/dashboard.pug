extends main
	
block content

	div(class = "container")
		div(class="row")
			div(class ="col s12 teal")
				h3 Profile:
		div.row
			div.col.s6.blue
				h5 Username: #{user.username}
			div(class = "col s6 orange")
				img.validate#profilePic(src ="https://static.licdn-ei.com/scds/common/u/images/themes/katy/ghosts/person/ghost_person_200x200_v1.png", width ="100", height="100", right-align)
		div(class = "row")
			h5 Real Name: #{user.firstName} #{user.lastName} 
		div(class = "row")
			div(class ="col s6")
				h5 Country: (userCountry)
			div(class ="col s6")
				h5 City: (userCity)
