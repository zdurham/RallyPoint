extends main

block content
  .flex-container
    p Hello
    p Please fill out the information below
    form#signup(method='POST' action="/sign-up" name="signup")
      .row
        div.input-field.col.s6
          if badFirst
            p #{badFirst}
          input.validate#firstName(name="firstName" type="text")
          label(for="firstName") First Name (required)
        div.input-field.col.s6
          if badLast
            p #{badLast}
          input.validate#lastName(name="lastName" type="text")
          label(for="lastName") Last Name (required)
        div.input-field.col.s12
          if badEmail
            p #{badEmail}

          input.validate#email(name="email" type="text")
          label(for="email") Email (required)
        div.input-field.col.s12
          if badUser
            p #{badUser}

          input.validate#username(name="username" type="text")
          label(for="username") Username (required)
        div.input-field.col.s12
          if badPass
            p.err #{badPass}
          input.validate#password(name="password" type="text")
          label(for="password") Password (required)
        div.input-field.col.s12

          if noMatch
            p.err #{noMatch}
          input.validate#password2(name="password2" type="text")
          label(for="password2") Confirm Password (required)
        div.input-field.col.s12

          textarea.materialize-textarea#about(name="about" type="text")
          label(for="about") About Me
        div.input-field.col.s12
          input.validate#image(name="image" type="text")
          label(for="image") Add URL to Profile Picture
        div.input-field.col.s12
          img.validate#imageURL(name="imageURL")
          br
          button.btn.waves-effect.waves-light#uploadButton(type="button") Upload Photo
        div.input-field.col.s12
          button.btn.waves-effect.waves-light#submit(type="submit") Submit
        script
          include ../public/assets/javascript/main.js
