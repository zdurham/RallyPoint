extends main

block content

	.flex-container
		.row
			ul.collapsible
				each post in posts
					li
						div.collapsible-header
							i.material-icons exposure
							p Post ID:
							a(href=`/posts/${post.id}`)
								h3 #{post.id}
							br
							p Post Title:
								h3 #{post.title}
						div.collapsible-body
							p Category:
							p #{post.category}
							br
							p Body:
							p #{post.body}
							br
							form(method='get' action='/authorize')
								button.btn.waves-effect.waves-light#donateButton(type="submit") Donate Today!         
