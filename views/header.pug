doctype html
html
	head
		title Rally Point
		link(rel = "stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
		link(type="text/css", rel ="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css")
		link(rel = 'stylesheet' href='/assets/css/style.css')
		
		
		
	body
	
		div(id ="modal1", class ="modal modal-fixed-footer")
			div(class = "modal-content")
				h4 Sign in
				p A bunch of text
				form(method="post", action="/sign-in")
					label(for="username") Email
					input#email(name="email" type="text" placeholder = "email")
					label(for="password") Password
					input#password(name="password" type="password", placeholder ="Enter Your Password")
					div(class="center-align")
						button.btn.waves-green.waves-effect(type="submit", class ="center-align") Submit

				br
				br
				
				h4(class ="center-align") Want to create an account?
				div(class ="center-align")
					<a class="waves-effect waves-light btn modal-action modal-close", href ="/sign-up">Join</a>

			div(class ="modal-footer")
				a(href="#!", class="modal-action modal-close waves-effect waves-green btn-flat") Close
		ul(id="dropdown1", class="dropdown-content")
			li
				a(href ="/create-post") Requests
			li(class ="divider")
			li
				a(href = "#!") Causes
			li(class ="divider")
			li
				a(href ="/posts") Posts

		ul(id="dropdown2", class="dropdown-content")
			li

				a(href ="/dashboard") User Profile
			li(class ="divider")
			li
				a(href ="#!") Sign Out
		

		nav
			div(class="nav-wrapper")
				img(src = "/assets/images/rpLogo.png" class ="left hide-on-med-and-down" width ="250" height ="62")
				a(href="#!", class="brand-logo left on-med-and-down")
					img(src = "/assets/images/rpLogo.png" class ="left" width ="225" height ="56", class="hide-on-large-only")
					//-ul(class="hide-on-med-and-down")
				a(href="#", data-activates = "mobile-demo", class="button-collapse right")
					i(class="material-icons") menu
				ul(class ="left hide-on-med-and-down")

					li
						a(href ="/") Home
					li
						a(class ="dropdown-button", href="#!", data-activates ='dropdown1') Get Active
								i(class ="material-icons right") arrow_drop_down
					li
						a(href ="/about") About Us
					li
						a(href ="/contact") Contact
				ul(class ="right hide-on-med-and-down")
					li
						a(href ="/sign-up") Sign-up
					li
						a(href='/sign-in') Sign-In
					li
						a(class ="dropdown-button", href="#!", data-activates ='dropdown2') User Profile
							i(class ="material-icons right") arrow_drop_down
				ul(class ="side-nav", id="mobile-demo")
					li
						a(href="#") Posts
					li
						a(href="/about") About Us
					li
						a(href="/profile") Dashboard
					li

						a(href="/sign-in") Sign-In
					li
						a(href="/sign-up") Sign-Up
					if user
						li
							a(href='/dashboard') #{user.username}

